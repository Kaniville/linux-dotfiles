export BEMENU_OPTS="-w -i -H '21' --fn 'Hack Regular 9' --tb '#131619' --tf '#d8dee9' --fb '#131619' --nb '#131619' --nf '#d8dee9' --hb '#131619' --hf '#bf616a'"
export ZVM_TERM=xterm-256color
