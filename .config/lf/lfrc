set drawbox true
set icons true
set mouse true

map <backspace2> set hidden!

# Cut
map d
map dd cut

# Trash
cmd trash %gio trash $fx
map dD trash

# Delete
map DD delete

# Create directory & file
map a $mkdir<space>
map A $touch<space>

# Rename
map r
map rc push :rename<space>
map ra rename

# CD
map gp cd /tmp
map ge cd /etc
map gv cd /var
map go cd /opt
map gu cd /usr
map gd cd /dev
map gi cd /run/media

# Open with
cmd open-with %"$@" "$fx"
map o push :open-with<space>

# Nested instance
%[ $LF_LEVEL -eq 1 ] || echo "Warning: You're in a nested lf instance!"
