# INCLUDE
include /etc/sway/config.d/*
include $HOME/.config/sway/config.d/*

#-------------------------------------------------------------------
# BASE APPLICATIONS
## Terminal
bindsym $mod+Return exec $terminal -e bash -c "tmux attach || tmux new"
bindsym $mod+Shift+Return exec $terminal

## Launcher
bindsym $mod+d exec $menu

#-------------------------------------------------------------------
# EXTRA APPLICATIONS
## Ranger & Calcurse
bindsym $mod+o exec $terminal -e ranger
bindsym $mod+Shift+o exec $terminal -e calcurse

## Nmtui
bindsym $mod+c exec $terminal -e nmtui connect
bindsym $mod+Shift+c exec $terminal -e nmtui edit

## Htop
bindsym $mod+Shift+q exec $terminal -e htop

#-------------------------------------------------------------------
# SCRIPTS
## Power menu
bindsym $mod+Shift+e exec $HOME/.local/bin/power-menu.sh

# Profile menu
bindsym $mod+p exec $HOME/.local/bin/profile-menu.sh

## Screenshot
bindsym $mod+Shift+s exec $HOME/.local/bin/screenshot-menu.sh
bindsym Print exec $HOME/.local/bin/screenshot-menu.sh

## Window menu
bindsym $mod+Shift+d exec $HOME/.local/bin/window-menu.py

#-------------------------------------------------------------------
# XF86 KEYS
## Light control
bindsym XF86MonBrightnessUp exec brightnessctl set +5%
bindsym XF86MonBrightnessDown exec brightnessctl set 5%-

## Pipewire
bindsym XF86AudioRaiseVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%+
bindsym XF86AudioLowerVolume exec wpctl set-volume @DEFAULT_AUDIO_SINK@ 5%-
bindsym XF86AudioMute exec wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle
bindsym XF86AudioMicMute exec wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle

#-------------------------------------------------------------------
# SWAY HOTKEYS
## Reload Sway
bindsym $mod+Shift+r reload

## kill window
bindsym $mod+q kill

## Floating modifier
floating_modifier $mod normal

#-------------------------------------------------------------------
# LAYOUT STUFF
## Layout styles
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split

## Tiling/fullscreen mode
bindsym $mod+f fullscreen

## Tiling/floating mode
bindsym $mod+Shift+Space floating toggle

## Split current container
bindsym $mod+b split horizontal
bindsym $mod+v split vertical
bindsym $mod+n split none

## Sticky window
bindsym $mod+Shift+f sticky toggle

## Scratchpad
bindsym $mod+parenright scratchpad show
bindsym $mod+Shift+parenright move scratchpad

#-------------------------------------------------------------------
# FOCUS/MOVE/RESIZE
## Focus the given workspace
bindsym $mod+ampersand workspace number 1
bindsym $mod+eacute workspace number 2
bindsym $mod+quotedbl workspace number 3
bindsym $mod+apostrophe workspace number 4
bindsym $mod+parenleft workspace number 5
bindsym $mod+minus workspace number 6
bindsym $mod+egrave workspace number 7
bindsym $mod+underscore workspace number 8
bindsym $mod+ccedilla workspace number 9
bindsym $mod+agrave workspace number 10

## Focus the next/previous workspace
bindsym $mod+Tab workspace next_on_output
bindsym $mod+Shift+Tab workspace prev_on_output

## Move window to the given workspace
bindsym $mod+Shift+ampersand move container workspace number 1
bindsym $mod+Shift+eacute move container workspace number 2
bindsym $mod+Shift+quotedbl move container workspace number 3
bindsym $mod+Shift+apostrophe move container workspace number 4
bindsym $mod+Shift+parenleft move container workspace number 5
bindsym $mod+Shift+minus move container workspace number 6
bindsym $mod+Shift+egrave move container workspace number 7
bindsym $mod+Shift+underscore move container workspace number 8
bindsym $mod+Shift+ccedilla move container workspace number 9
bindsym $mod+Shift+agrave move container workspace number 10

## Focus window
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

## Focus to parent/child container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

## Move window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

## Swap focus Tiling/floating area
bindsym $mod+Space focus mode_toggle

## Move workspace
mode "move workspace" {
    bindsym h move workspace output left
    bindsym j move workspace output down
    bindsym k move workspace output up
    bindsym l move workspace output right

    bindsym Left move workspace output left
    bindsym Down move workspace output down
    bindsym Up move workspace output up
    bindsym Right move workspace output right

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+t mode "move workspace"

## Resize window
mode "resize" {
    bindsym h resize shrink width 10px
    bindsym j resize grow height 10px
    bindsym k resize shrink height 10px
    bindsym l resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"
